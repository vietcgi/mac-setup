# Ghostty Terminal Configuration
# Modern GPU-accelerated terminal emulator
# Documentation: https://ghostty.org/docs

# ============================================================================
# Font Configuration
# ============================================================================

# Use Nerd Font for icon support (compatible with Powerlevel10k)
font-family = "MesloLGS Nerd Font Mono"
font-size = 13

# Font features
font-feature = -calt  # Disable ligatures for clearer code reading (optional)
# font-feature = +calt  # Enable ligatures (uncomment if preferred)

# Font thickening (adjust for your display)
# Values: none, thin, medium, thick
font-thicken = true

# ============================================================================
# Color Scheme - Catppuccin Mocha (Modern & Popular)
# ============================================================================

# Background and foreground
background = #1e1e2e
foreground = #cdd6f4

# Selection colors
selection-background = #585b70
selection-foreground = #cdd6f4

# Cursor
cursor-color = #f5e0dc
