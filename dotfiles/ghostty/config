# ============================================================================
# Window & Appearance
# ============================================================================

# Window padding (breathing room)
window-padding-x = 8
window-padding-y = 8

# Window decorations
window-decoration = true

# Background opacity (1.0 = solid, 0.0 = transparent)
background-opacity = 0.95

# Blur background (macOS only, requires opacity < 1.0)
background-blur-radius = 20

# Window title
window-title-font-family = "MesloLGS Nerd Font Mono"

# Initial window size (columns x rows)
window-width = 120
window-height = 35

# ============================================================================
# Performance & GPU
# ============================================================================

# GPU rendering (auto, software, opengl, metal)
# metal = macOS hardware acceleration
# opengl = Linux hardware acceleration
# auto = automatically choose best option
# renderer = auto  # Usually auto is best

# Frame rate cap (0 = unlimited, matches display refresh rate)
# max-fps = 120

# ============================================================================
# Cursor
# ============================================================================

# Cursor style: block, beam, underline
cursor-style = block

# Cursor blink
cursor-style-blink = true

# Cursor color follows text color under cursor
# cursor-invert-fg-bg = true

# ============================================================================
# Shell Integration
# ============================================================================

# Enable shell integration (auto-inject shell hooks)
shell-integration = detect

# Shell integration features
shell-integration-features = cursor,sudo,title

# ============================================================================
# Scrollback
# ============================================================================

# Scrollback buffer size (lines)
scrollback-limit = 10000

# ============================================================================
# Mouse & Selection
# ============================================================================

# Click to select word
mouse-shift-capture = true

# Copy on select (automatically copy selected text)
copy-on-select = true

# URL detection and click
link-url = true

# ============================================================================
# Tabs & Windows
# ============================================================================

# Tab bar visibility: always, never, auto
# window-theme = auto

# Close window without confirmation if no running processes
confirm-close-surface = false

# ============================================================================
# Keyboard & Keybindings
# ============================================================================

# macOS: Use Option as Alt (important for terminal shortcuts)
macos-option-as-alt = true

# Custom keybindings (uncomment and modify as needed)

# New tab
# keybind = cmd+t=new_tab

# Close tab
# keybind = cmd+w=close_surface

# Next/Previous tab
# keybind = cmd+shift+]>=goto_tab:+1
# keybind = cmd+shift+[=goto_tab:-1

# Split window
# keybind = cmd+d=new_split:right
# keybind = cmd+shift+d=new_split:down

# Navigate splits
# keybind = cmd+opt+left=goto_split:left
# keybind = cmd+opt+right=goto_split:right
# keybind = cmd+opt+up=goto_split:top
# keybind = cmd+opt+down=goto_split:bottom

# Font size adjustment
# keybind = cmd+plus=increase_font_size:1
# keybind = cmd+minus=decrease_font_size:1
# keybind = cmd+0=reset_font_size

# Clear screen
# keybind = cmd+k=clear_screen

