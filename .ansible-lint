# Ansible-lint configuration
# Lenient rules for development setup

# Skip rules that are too strict for this repo
skip_list:
  - yaml[indentation]       # Allow flexible indentation
  - yaml[truthy]            # Allow truthy values without explicit false/true
  - command-instead-of-shell  # Allow command module when needed
  - name[casing]            # Allow lowercase task names
  - no-handler              # Allow tasks without handlers
