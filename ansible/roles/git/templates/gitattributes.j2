# Git Attributes File
# {{ ansible_managed }}
# Defines how git should handle different file types

# Auto detect text files and normalize line endings to LF
* text=auto

# Text files with LF line endings
*.txt text eol=lf
*.md text eol=lf
*.markdown text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.jsonc text eol=lf
*.toml text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Source code
*.py text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.go text eol=lf
*.rs text eol=lf
*.rb text eol=lf
*.rb text eol=lf
*.java text eol=lf
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.sql text eol=lf
*.html text eol=lf
*.xml text eol=lf

# Config files
.gitconfig text eol=lf
.editorconfig text eol=lf
.env text eol=lf
Makefile text eol=lf
*.mk text eol=lf

# Documentation
*.rst text eol=lf
*.adoc text eol=lf
*.asciidoc text eol=lf
README* text eol=lf
CHANGELOG* text eol=lf
LICENSE* text eol=lf
AUTHORS* text eol=lf
CONTRIBUTORS* text eol=lf

# Binary files - don't modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.tar binary
*.7z binary
*.ttf binary
*.otf binary
*.db binary
*.sqlite binary

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# CI/CD
.github/** text eol=lf
.gitlab-ci.yml text eol=lf
.travis.yml text eol=lf
azure-pipelines.yml text eol=lf

# Diff
*.diff text eol=lf
*.patch text eol=lf

# Archives should never be modified
*.ar binary
*.tar binary
*.tar.gz binary
*.zip binary
*.7z binary
*.jar binary
*.rar binary
*.iso binary

# Documents
*.doc binary
*.docx binary
*.pdf binary
*.ppt binary
*.pptx binary
*.xls binary
*.xlsx binary
